{
  "expo": {
    "name": "Stadtwache",
    "slug": "stadtwache",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/stadtwache-icon.png",
    "scheme": "stadtwache",
    "userInterfaceStyle": "automatic",
    "description": "Moderne Stadtwache-App für Sicherheitsbehörden und Bürgerdienste",
    "primaryColor": "#1E3A8A",
    "splash": {
      "image": "./assets/images/stadtwache-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E3A8A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stadtwache.app"
    },
    "android": {
      "package": "com.stadtwache.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/stadtwache-adaptive.png",
        "backgroundColor": "#1E3A8A"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/stadtwache-favicon.png"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
